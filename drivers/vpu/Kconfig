#
# C-SKY VPU driver configuration
#

menuconfig CSKY_VPU
	bool "VPU support"

if CSKY_VPU
config DEBUG_VPU
	bool "Debug VPU calls"
	depends on DEBUG_KERNEL
	help
	  Say Y here to add some extra checks and diagnostics to PINCTRL calls.

config VPU_CODA7541
	tristate "cnm coda7541 driver support"
	depends on OF
	select VIDEO_CODA
endif

